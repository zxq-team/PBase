.srcColor{color:#8000FF}

a.open_new{font-weight:bold;color:#BC2049;margin-left:10px;}	

a.open_new:hover{color:green;}



<!-- *************************************      指标报告       ***************************************** -->
.hr_1{color:#A6C9E2;height:1px;width:100%;text-align:left;}<!-- 分隔线 -->

.font_color_1{color:#05548C;}
.div_contain_btn{width:100%;height:40px;border:1px solid #BBD1E0;margin-top:1px;margin-left:1px;padding:5px 0px 2px 5px;}<!-- 放按钮的表格 -->
.div_btn_shadow{border-bottom:2px solid #DDE4E8;margin-bottom:10px;margin-left:1px;}	
	
	
	

.table_report{border-collapse:collapse;border:1px solid #DDECF6;margin-left:10px;width:100%;}<!-- 盛放报告的表格 -->
.table_report td{border:1px solid #DDECF6;padding:5px;}	
.table_report textarea{width:100%;height:70px;}
.table_report fieldset{width:100%;border:1px solid #7F9DB9;padding:0px 7px;margin-bottom:5px;}
.table_report fieldset legend{color:#05548C;}
.table_report fieldset table {border-collapse:collapse;border:1px solid #ffffff;margin-top:5px;margin-bottom:5px;}
.table_report fieldset table td{border:1px solid #ffffff;padding-bottom:5px;vertical-align:text-top;}
.table_report textarea,.table_report input{margin-top:3px;margin-bottom:3px;}

.td_title{color:#05548C;width:90px;}<!---->
.title_color{color:#05548C;}
.a_report{color:purple;}
.a_report:hover{color:red;text-decoration:none;}

.table_report_layout{border-collapse:collapse;border:1px solid #A6C9E2;}
.table_report_layout td{border:1px solid #A6C9E2;}

.table_base_info{border-collapse:collapse;border:1px solid #DDECF6;width:95%;margin-top:20px;margin-bottom:20px;}
.table_base_info td{border:1px solid #DDECF6;padding:5px;padding-bottom:10px;vertical-align:text-top;}


<!-- ******************************************************************** -->


.table_border_white{border-collapse:collapse;border:1px solid #fff;}<!-- 白色边框的表格 -->
.table_border_white td{border:1px solid #fff;}

.table_border_2{border-collapse:collapse;border:1px solid #DBE7F1;margin-left:1px;}<!-- 其他颜色边框的表格 -->
.table_border_2 td{border:1px solid #DBE7F1;}


.mid{text-align:center;}
.padding_5px{padding:5px;}
.padding_top_5px{padding-top:5px;}

