@charset "utf-8";
/* CSS design by */
*{margin:0px; padding:0px;font-family: Arial,"宋体", Helvetica, sans-serif;color:#454545; word-break: break-all;font-size:12px;}



.listbg{border:solid 1px #edd89d;  padding:15px;}

/****data list***/
.datalist          {border-collapse:collapse; width:100%;}
.datalist th       {padding-left:3px;background:#ffde7b; font-weight:normal;line-height:24px;border:1px solid #BBD1E0;color:#000;text-align:left;}
.datalist td       {padding-left:3px; border:1px solid #BBD1E0;line-height:20px;color:#000}
.datalist thead td {color:#195077;background:#EEF4F9;font-weight:bold;}


.white{color:#fff;}
.LH20{line-height:20px;}
.padding10{padding:10px;}

.jstreeDiv{
     
     width:160px;
     height:500px;
     float:left;
     overflow: auto;
     
     background: white;
}

