@charset "utf-8";
/* CSS Document */
body{ color:#fff;}
a{ color:#fff; text-decoration:none;}
.mod{ border:1px solid #a2b3c6; background:#e8eced;}
/*----------------------------layout-------------------------*/
.phd, .pbd, .pft{ width:1001px; margin:0 auto;}
.pbd{ width:977px; padding:0 12px; overflow:hidden; zoom:1; background:#f4f4f4;}
.pt-main{ float:right; width:654px; border:1px solid #a2b3c6; border-width:1px 1px 0 0;}
.pt-second{ float:left; width:322px;}

.phd{ height:84px; background:url(../images/phd.png) no-repeat 0 0;}
	.phd h1{text-indent:-999px; overflow:hidden;}
.pft{ height:77px; background:url(../images/pft.png) no-repeat 0 0;}
	.pft p{text-indent:-999px; overflow:hidden;}
/*----------------------------mod-------------------------*/
.pt-phd{height:14px; margin-bottom:5px; background:url(../images/p-phd.png) no-repeat 0 0;}
.pt-pft{height:14px; margin-top:5px; background:url(../images/p-pft.png) no-repeat 0 0;}
.col{ display:inline; float:left;}
.mod-main{ position:relative; margin:0 auto; width:625px; padding-left:18px; height:261px;}
.mod-main .mod-bg{ position:absolute; top:0; left:0; width:643px; height:261px; z-index:10;}
.mod-main01 .mod-bg{background:url(../images/mod_01.png) no-repeat 0 0; _background:none; _filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src="images/mod_01.png", sizingMethod="scale");}
.mod-main02 .mod-bg{background:url(../images/mod_02.png) no-repeat 0 0; _background:none; _filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src="images/mod_02.png", sizingMethod="scale");}
	.mod-main01 .col01, .mod-main02 .col01{ width:172px; height:172px; margin-top:37px;}
	.mod-main01 .col02, .mod-main02 .col02{ width:220px; height:220px; margin:18px 20px 0;}
.mod-main03{ padding:20px 0 0 20px; height:246px; width:623px;}
.mod-main03 .mod-bg{ height:262px; background:url(../images/mod_03.png) no-repeat 0 0; _background:none; _filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src="images/mod_03.png", sizingMethod="scale");}
	.mod-main03 .col01{ margin-right:15px;}
	.mod-main03 .col02{ width:219px; height:219px; margin-right:6px;margin-top:-2px;}
	.mod-main03 .meter01, .mod-main03 .meter02{ position:relative; float:left; width:50px; padding-left:25px; background:url(../images/wbg_01.png) no-repeat 0 0; z-index:100;}
	.mod-main03 .meter02{background-image:url(../images/wbg_02.png);}
.mod-main01 a, .mod-main02 a, .mod-main03 .col02 a{ position:relative; display:block; width:100%; height:100%; z-index:100;}

.mod-sub{}
	.mod-sub .mhd{ height:14px; background:url(../images/smhd_01.png) no-repeat 0 0;}
	.mod-sub .mbd{ padding:3px 0;}
	.mod-sub li{padding-bottom:5px; text-align:center; overflow:hidden;}
	.mod-sub li a{ display:inline-block; width:307px; height:25px; padding:10px 0 9px 5px; background:url(../images/list_bg.png) no-repeat 0 0; line-height:25px; font:700 13px "微软雅黑",Arial; text-align:left; text-decoration:none;}
	.mod-sub li *{ vertical-align:middle;}
	.mod-sub li span{ margin:0 3px;}
	.mod-sub .line{ border-bottom:1px solid #a2b3c6; margin-bottom:5px;}
	.mod-sub .warn a{ width:261px; height:34px; line-height:34px; padding:5px 46px 5px 5px;}
		.mod-sub .warn span{ float:right;}

.mod-map{ border-width:0 1px;}
	.mod-map .mhd{ height:14px; background:url(../images/smhd_02.png) no-repeat 0 0;}
	.mod-map .mbd{ text-align:center; padding:11px 0 12px;}
	.mod-map .mft{ height:14px; background:url(../images/smft.png) no-repeat 0 0;}
		
.mod-tool{ height:67px; padding-left:50px; background:url(../images/mmod.png) no-repeat 0 0; clear:both;}
	.mod-tool .mbd{ height:33px; padding:17px 75px 17px 25px; background:#e8eced url(../images/mmod.png) no-repeat 100% 0;}
	.mod-tool .mbd a{ display:inline-block; width:97px; height:33px; margin-left:12px; background:url(../images/btn_97x33.png) no-repeat 0 0; line-height:33px; text-align:center; font-size:14px; font-weight:700;}